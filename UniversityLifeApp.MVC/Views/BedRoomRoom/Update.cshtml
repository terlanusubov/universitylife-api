<div class="d-flex justify-content-center align-items-center" style="width: 100%;">
    <form asp-action="Update" asp-controller="BedRoomRoom" style="width: 60%; margin: 200px 0px;" enctype="multipart/form-data">
        <h4>BedRoom name</h4>
        <input type="text" name="Name" asp-for="Name" class="form-control mb-3" placeholder="BedRoom name">
        <span style="color: red;">@Html.ValidationMessageFor(x => x.Name)</span>
        <div class="row">
            <div class="col-lg-6">
                <h4>Description</h4>
                <input type="text" name="Description" asp-for="Description" class="form-control mb-3" placeholder="Description">

                <span style="color: red;">@Html.ValidationMessageFor(x => x.Description)</span>
            </div>
            <div class="col-lg-6">
                <h4>Price</h4>
                <input name="Price" asp-for="Price" class="form-control mb-3" placeholder="Price">

                <span style="color: red;">@Html.ValidationMessageFor(x => x.Price)</span>
            </div>

            <div class="col-lg-6">
                <h4>Bed room</h4>
                <select class="form-control basic" asp-for="BedRoomId" name="BedRoomId" asp-items="@new SelectList((List<BedRoom>)ViewBag.BedRooms, nameof(BedRoom.Id), nameof(BedRoom.Name))"></select>

                <span style="color: red;">@Html.ValidationMessageFor(x => x.BedRoomId)</span>
            </div>

            <div class="col-lg-6">
                <h4>Type</h4>
                <select class="form-control basic" asp-for="BedRoomRoomTypeId" name="BedRoomRoomTypeId" asp-items="@new SelectList((List<BedRoomRoomType>)ViewBag.BedRoomRoomTypes, nameof(BedRoomRoomType.Id), nameof(BedRoomRoomType.Name))"></select>


                <span style="color: red;">@Html.ValidationMessageFor(x => x.BedRoomRoomTypeId)</span>
            </div>
            <div class="col-lg-6">
                <h4>Image</h4>
                <input name="ImageFile" asp-for="ImageFile" class="form-control mb-3" placeholder="ImageFile">

                <span style="color: red;">@Html.ValidationMessageFor(x => x.ImageFile)</span>
            </div>




        </div>



        <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="d-flex align-items-center" style=" background-color: green; padding: 10px 15px; color: white; border: 1px solid white; border-radius: 5px; font-weight: 600;"><i class='bx bx-save' style="margin-right: 7px;"></i>Save</button>
        </div>
    </form>
</div>

