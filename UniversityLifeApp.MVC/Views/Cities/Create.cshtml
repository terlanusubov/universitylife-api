@using UniveristyLifeApp.Models.v1.Cities.AddCity;
@using UniversityLifeApp.Domain.Entities;

@{
    ViewData["Title"] = "Create";
}

@model AddCityRequest



<div class="d-flex justify-content-center align-items-center" style="width: 100%;">
    <form asp-action="Create" asp-controller="Cities" style="width: 60%; margin: 500px 0px;" enctype="multipart/form-data">
        <h4>Carousel title</h4>
        <input type="text" name="Name" asp-for="Name" class="form-control mb-3" placeholder="Carousel title">
        <span style="color: red;">@Html.ValidationMessageFor(x => x.Name)</span>
        <h4>Carousel description</h4>
        <textarea type="text" name="Latitude" asp-for="Latitude" class="form-control mb-3" placeholder="Carousel description"></textarea>
        <span style="color: red;">@Html.ValidationMessageFor(x => x.Latitude)</span>
        <h4>Carousel url</h4>
        <textarea type="text" name="Longitude" asp-for="Longitude" class="form-control mb-3" placeholder="URL"></textarea>
        <span style="color: red;">@Html.ValidationMessageFor(x => x.Longitude)</span>
        <h4>Select country</h4>
        <select class="form-control basic" asp-for="CountryId" name="CountryId" asp-items="@new SelectList((List<Country>)ViewBag.Countries, nameof(Country.Id), nameof(Country.Name))"></select>
       
        <h4>Carousel image</h4>
        <input class="form-control" name="ImageFile" asp-for="ImageFile" placeholder="Şəkil">
        <span style="color: red;">@Html.ValidationMessageFor(x => x.ImageFile)</span>

        <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="d-flex align-items-center" style=" background-color: green; padding: 10px 15px; color: white; border: 1px solid white; border-radius: 5px; font-weight: 600;"><i class='bx bx-save' style="margin-right: 7px;"></i>Save</button>
        </div>
    </form>
</div>