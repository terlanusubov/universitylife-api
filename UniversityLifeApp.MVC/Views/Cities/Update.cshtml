@using UniversityLifeApp.Domain.Entities;
@using UniversityLifeApp.MVC.ViewModels;

@{
    ViewData["Title"] = "Update";
}

@model CityViewModel

<div class="d-flex justify-content-center align-items-center" style="width: 100%;">
    <form asp-action="Create" asp-controller="Cities" style="width: 60%; margin: 200px 0px;" enctype="multipart/form-data">
        <h4>City name</h4>
        <input type="text" name="Name" asp-for="Response.Name" class="form-control mb-3" placeholder="City name">
        <span style="color: red;">@Html.ValidationMessageFor(x => x.Response.Name)</span>
        <div class="row">
            <div class="col-lg-6">
                <h4>Latitude</h4>
                <input type="text" name="Latitude" asp-for="Response.Latitude" class="form-control mb-3" placeholder="Latitude">

                <span style="color: red;">@Html.ValidationMessageFor(x => x.Response.Latitude)</span>
            </div>

            <div class="col-lg-6">
                <h4>Longitude</h4>
                <input type="text" name="Longitude" asp-for="Response.Longitude" class="form-control mb-3" placeholder="Longitude">

                <span style="color: red;">@Html.ValidationMessageFor(x => x.Response.Longitude)</span>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <h4>Country</h4>
                <select class="form-control basic" asp-for="Response.CountryId" name="CountryId" asp-items="@new SelectList((List<Country>)ViewBag.Countries, nameof(Country.Id), nameof(Country.Name))"></select>
            </div>

            @* <div class="col-lg-6">
                <h4>City image</h4>
                <input class="form-control" name="ImageFile" asp-for="ImageFile" placeholder="Şəkil">
                <span style="color: red;">@Html.ValidationMessageFor(x => x.ImageFile)</span>
            </div> *@
        </div>

        <div class="row">
            <div class="col-lg-6 d-flex">
                <h4>Top city?</h4>
                     @* <input name="IsTop" asp-for="Response.IsTo" class="form-control mb-3" placeholder="IsTop"> *@
            </div>
        </div>







        <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="d-flex align-items-center" style=" background-color: green; padding: 10px 15px; color: white; border: 1px solid white; border-radius: 5px; font-weight: 600;"><i class='bx bx-save' style="margin-right: 7px;"></i>Save</button>
        </div>
    </form>
</div>

