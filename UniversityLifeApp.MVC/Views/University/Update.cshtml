@using UniveristyLifeApp.Models.v1.University.UpdateUniversity;
@using UniversityLifeApp.Domain.Entities;

@{
    ViewData["Title"] = "Update";
}

@model UpdateUniversityRequest



<div class="d-flex justify-content-center align-items-center" style="width: 100%;">
    <form asp-action="Update" asp-controller="University" style="width: 60%; margin: 200px 0px;" enctype="multipart/form-data">
        <h4>University name</h4>
        <input type="text" name="Name" asp-for="Name" class="form-control mb-3" placeholder="University name">
        <span style="color: red;">@Html.ValidationMessageFor(x => x.Name)</span>
        <div class="row">
            <div class="col-lg-6">
                <h4>Latitude</h4>
                <input type="text" name="Latitude" asp-for="Latitude" class="form-control mb-3" placeholder="Latitude">

                <span style="color: red;">@Html.ValidationMessageFor(x => x.Latitude)</span>
            </div>

            <div class="col-lg-6">
                <h4>Longitude</h4>
                <input type="text" name="Longitude" asp-for="Longitude" class="form-control mb-3" placeholder="Longitude">

                <span style="color: red;">@Html.ValidationMessageFor(x => x.Longitude)</span>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <h4>City</h4>
                <select class="form-control basic" asp-for="CityId" name="CityId" asp-items="@new SelectList((List<City>)ViewBag.Cities, nameof(City.Id), nameof(City.Name))"></select>
            </div>
        </div>







        <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="d-flex align-items-center" style=" background-color: green; padding: 10px 15px; color: white; border: 1px solid white; border-radius: 5px; font-weight: 600;"><i class='bx bx-save' style="margin-right: 7px;"></i>Save</button>
        </div>
    </form>
</div>